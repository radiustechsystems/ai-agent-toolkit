{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "paths": {
      "@radiustechsystems/ai-agent-core": ["node_modules/@radiustechsystems/ai-agent-core"],
      "@radiustechsystems/ai-agent-wallet": ["node_modules/@radiustechsystems/ai-agent-wallet"],
      "@radiustechsystems/ai-agent-adapter-vercel-ai": ["node_modules/@radiustechsystems/ai-agent-adapter-vercel-ai"],
      "@radiustechsystems/ai-agent-adapter-langchain": ["node_modules/@radiustechsystems/ai-agent-adapter-langchain"],
      "@radiustechsystems/ai-agent-adapter-model-context-protocol": ["node_modules/@radiustechsystems/ai-agent-adapter-model-context-protocol"],
      "@radiustechsystems/ai-agent-plugin-contracts": ["node_modules/@radiustechsystems/ai-agent-plugin-contracts"],
      "@radiustechsystems/ai-agent-plugin-crypto": ["node_modules/@radiustechsystems/ai-agent-plugin-crypto"],
      "@radiustechsystems/ai-agent-plugin-erc20": ["node_modules/@radiustechsystems/ai-agent-plugin-erc20"],
      "@radiustechsystems/ai-agent-plugin-uniswap": ["node_modules/@radiustechsystems/ai-agent-plugin-uniswap"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
