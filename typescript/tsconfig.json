{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "paths": {
      "@radiustechsystems/ai-agent-core": ["packages/core/src"],
      "@radiustechsystems/ai-agent-wallet": ["packages/wallets/src"],
      "@radiustechsystems/ai-agent-adapter-vercel-ai": ["packages/adapters/vercel-ai/src"],
      "@radiustechsystems/ai-agent-adapter-langchain": ["packages/adapters/langchain/src"],
      "@radiustechsystems/ai-agent-adapter-model-context-protocol": ["packages/adapters/model-context-protocol/src"],
      "@radiustechsystems/ai-agent-plugin-contracts": ["packages/plugins/contracts/src"],
      "@radiustechsystems/ai-agent-plugin-crypto": ["packages/plugins/crypto/src"],
      "@radiustechsystems/ai-agent-plugin-erc20": ["packages/plugins/erc20/src"],
      "@radiustechsystems/ai-agent-plugin-uniswap": ["packages/plugins/uniswap/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
